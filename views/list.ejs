<%- include('header.ejs') -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
<% todoList.forEach(function (item) {%>
  <form action="/delete" method="post">
    <div class="item">
      <input 
        type="checkbox" 
        name="itemToDelete" 
        value=<%= item._id %> 
        onChange="this.form.submit()"
      />
      <input type="hidden" name="listName" value="<%= listTitle %>" />
      <p><%= item.name %></p>
    </div>
  </form>
<% }); %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="todoItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button 
      type="submit" 
      name="list" 
      value="<%= listTitle %>"
    >
      +
    </button>
  </form>
</div>
<%- include('footer.ejs') -%>